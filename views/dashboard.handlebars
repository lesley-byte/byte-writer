<section>
    <h1>Dashboard</h1>
    <p> Here you can see your reviews and comments as well as an option to add new reviews</p>
    <div class="row">
        <div class="col-md-6">
            <h2>Reviews</h2>
            <ul>
                {{#each reviews}}
                <li>
                    <a href="/reviews/{{id}}"  class="btn btn-primary">{{this.title}}</a>
                    <a href="/reviews/update/{{id}}" class="btn btn-primary">Edit</a>
                    <a href="/reviews/delete/{{id}}" class="btn btn-danger">Delete</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Comments</h2>
            <ul>
                {{#each comments}}
                <li>
                    <a href="/reviews/{{this.reviewId}}">{{this.text}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <div>
            <a href="/reviews/new" class="btn btn-primary">Add New Review</a>
        </div>
</section>
<section>
    <h2>Add a Review</h2>
    <form action="/reviews" method="POST" class="add-review-form">
        <input type="hidden" name="userId" id="userId" value="{{userId}}">
        <label for="review-title">Review Title</label>
        <input type="text" name="review_title" id="review-title">
        <label for="review-text">Review Text</label>
        <input type="text" name="review_text" id="review-text">
        <label for="review-category">Review Category</label>
        <select id="review-category" name="review_category">
            {{#each categories as |category|}}
            <option value="{{id}}">{{category_name}}</option>
            {{/each}}
        </select>

        <button type="submit">Submit</button>
    </form>
</section>

<script src="/js/add-review.js"></script>

