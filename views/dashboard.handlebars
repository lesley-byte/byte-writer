<section>
    <h1>Dashboard</h1>
    <p> Here you can see your reviews and comments as well as an option to add new reviews</p>
    <div class="row">
        <div class="col-md-6">
            <h2>Reviews</h2>
            <ul>
                {{#each reviews}}
                <li>
                    <a href="/reviews/{{this._id}}">{{this.title}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Comments</h2>
            <ul>
                {{#each comments}}
                <li>
                    <a href="/reviews/{{this.reviewId}}">{{this.text}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <div>
            <a href="/reviews/new" class="btn btn-primary">Add New Review</a>
        </div>
</section>